<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/menuImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/hidden"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:onClick="hidden" />

        <Button
            android:id="@+id/twoA"
            android:layout_marginTop="@dimen/scroll_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:onClick="threeA" />

        <Button
            android:id="@+id/threeA"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/twoA"
            android:onClick="twoA" />

        <Button
            android:id="@+id/fourA"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/threeA"
            android:onClick="fiveA" />

        <Button
            android:id="@+id/fiveA"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/fourA"
            android:onClick="fourA" />


    </RelativeLayout>

</ScrollView>