<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/homePageImage"
            android:adjustViewBounds="true"
            android:layout_gravity="center"/>

        <Button
            android:layout_height="148dp"
            android:layout_width="match_parent"
            android:onClick="charm"
            android:id="@+id/Charm"/>

        <Button
            android:layout_height="140dp"
            android:layout_width="match_parent"
            android:onClick="dandelions"
            android:id="@+id/Dandelions"
            android:layout_below="@+id/Charm"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_height="140dp"
            android:layout_width="match_parent"
            android:onClick="perspective"
            android:id="@+id/Perspective"
            android:layout_below="@+id/Dandelions"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_height="140dp"
            android:layout_width="match_parent"
            android:onClick="reminder"
            android:id="@+id/Reminder"
            android:layout_below="@+id/Perspective"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_height="140dp"
            android:layout_width="match_parent"
            android:onClick="todo"
            android:id="@+id/ToDo"
            android:layout_below="@+id/Reminder"
            android:layout_alignParentStart="true" />



    </RelativeLayout>

</ScrollView>